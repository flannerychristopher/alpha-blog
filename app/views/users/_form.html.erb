<div class='row'>
  <div class='col-xs-12'>
    <%= render 'shared/errors', object: object %>

    <%= form_for(object, html: { class: 'form-horizontal', role: 'form' }) do |f| %>

      <div class='form-group'>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :username %>
          </div>
          <div class='col-sm-10'>
            <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
          </div>
        </div>
        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :email %>
          </div>
          <div class='col-sm-10'>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
          </div>
        </div>
        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :password %>
          </div>
          <div class='col-sm-10'>
            <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
          </div>
        </div>
        <div class='text-center'>
          <%= f.submit submit_text, class: 'btn btn-lg btn-primary', align: 'center' %>
        </div>
      </div>

    <% end %>

  </div>
</div>