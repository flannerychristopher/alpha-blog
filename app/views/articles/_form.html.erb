<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@article, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
      <%= render 'shared/errors', :object => f.object %>

      <div class='form-group'>

        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :title %>
          </div>
          <div class='col-sm-10'>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
          </div>
        </div>
        <div class='form-group'>
          <div class='control-label col-sm-2'>
            <%= f.label :description %>
          </div>
          <div class='col-sm-10'>
            <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Description of article' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-offset-2 col col-sm-10'>
            <%= f.submit submit_text, class: 'btn btn-primary btn-lg' %>
          </div>
        </div>

      </div>

    <% end %>


      <%= link_to "Cancel #{submit_text.downcase} and view all articles.", articles_path, align: 'center' %>

  </div>
</div>