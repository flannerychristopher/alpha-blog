<h1 align='center'>
  Title: <%= @article.title %>
</h1>


<div class='well col-sm-8 col-sm-offset-2'>
  <h4 class='center description'>

    <strong>Description:</strong>
  </h4>
  <div class='row center'>
    <%= link_to gravatar_for(@article.user, size: 50), user_path(@article.user) %>
    <br />
    <small>
      created by: <%= link_to @article.user.username, user_path(@article.user) %>
    </small>
  </div>
  <hr>
  <%= simple_format(@article.description) %>

  <% if @article.categories.any? %>
    <p>Categories: <%= render @article.categories %></p>
  <% end %>

  <div class='article-actions center'>
    <%= link_to 'Edit this Article',    edit_article_path(@article), 
                                        class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Delete this Article',  article_path(@article), 
                                        method: :delete, data: { confirm: 'Are you sure?' },
                                        class: 'btn btn-xs btn-danger' %>
    <%= link_to 'See All Articles',     articles_path,
                                        class: 'btn btn-xs btn-success' %>
  </div>

</div>
